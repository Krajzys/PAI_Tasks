@{
    Layout = null;
    var name = "Robert Paulson";
}

<!DOCTYPE html>

<html>
<head>
    @{ 
        if (!Request["name"].IsEmpty())
        {
            name = Request["name"];
        }
    }
    <meta name="viewport" content="width=device-width" />
    <title>Name</title>
</head>
<body>
    <div>
        <ul>
            @{
                for (int i = 0; i < 10; i++)
                {
                    <li>His name is @name</li>
                }
            }
        </ul>
    </div>
</body>
</html>
